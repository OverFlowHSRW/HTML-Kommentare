<script>
function on() {
    document.getElementById("overlay").style.display = "block";
}
function off() {
    document.getElementById("overlay").style.display = "none";
}

function showbtn(){
	document.getElementById("subbotton").style.display ="inline-block";
}

function shownotbtn (){
	document.getElementById("subbotton").style.display = "none";
}




